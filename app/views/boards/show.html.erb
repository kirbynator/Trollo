

<div class="ui stackable five column relaxed grid">
  <div class="stackable row">
    <div class="bottom column">
      <div class="ui opi olive inverted vertical menu">
        <div class="item">
          <div class="ui center aligned header"> 
            <div class="white"><%= @board.name %> 
              <div class="ui center aligned header">
                <div class="item">
                <%= link_to edit_user_board_path(@board) do %>
               <i class="cog icon"></i>
                <% end%>
                <%= link_to user_board_path(@board), method: :delete do %>
                <i class="trash alternate icon"></i>
                <% end%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  



<% @board.lists.each do |list| %>
  <div class="bottom column">
      <div class="ui vertical menu">
       <div class="ui top olive center aligned relaxed header">
          <h3>
        <div class="box">
          <div class="top">
       <%= link_to edit_board_list_path(@board, list) do %>
               <i class="cog olive icon"></i>
                <% end%>
            </div>
            <div class="top">
                <%= list.name %>    
            </div>
            <div class="top">
                <%= link_to board_list_path(@board, list), method: :delete do %>
                <i class="trash olive alternate icon"></i>
                <% end%>
            </div>
        </div>
                    </h3>
        </div>
        
       <div class="item">
               <% list.tasks.each do |task| %>  
              <%= link_to board_list_task_path(@board, list, task), method: :delete do %>
              <i class="check circle outline olive icon"></i>
              <% end%>
              <%= task.name %><br />
               <% end%>
<%=  link_to new_board_list_task_path(@board, list) do %>
<i class="plus square outline olive icon"></i>
<% end%>
  </div>
      </div>
  </div>
  <% end%>
<div class="column">
      <div class="ui vertical menu">
        <div class="item">
<%= link_to new_board_list_path(@board) do%>
<h1><i class="plus olive icon"></i></h1>
<% end%>
</div>
   </div>
      </div>
      </div>
  </div>

