
<h1 class="ui olive center aligned header">Create A New Task</h1>
<%= form_with(model: [@board, @list, @task], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, class: "middle input" %>
  </div>
 <div class="ui olive center aligned header">
 <%= f.submit nil, class: "ui olive button" %>
 </div>
<% end %>